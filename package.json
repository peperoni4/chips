{
    "name": "chips",
    "version": "1.0.0",
    "description": "simple chat app",
    "type": "module",
    "engines": {
        "node": "20.12.x",
        "npm": "10.5.x"
    },
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
        "build:client": "npm run build -w apps/client",
        "build:server": "npm run build -w apps/server",
        "lint:type": "npx tsc --noEmit",
        "prettier:check": "prettier \"**/*.{js,ts,tsx,json,md,css,html}\"",
        "prettier:format": "npm run prettier:check -- --write"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/peperoni4/chips.git"
    },
    "keywords": [
        "chat-app"
    ],
    "author": "peperoni4",
    "license": "ISC",
    "devDependencies": {
        "prettier": "3.3.3",
        "typescript": "^5.5.4"
    }
}
